<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <queries>
        <package android:name="com.google.android.apps.maps" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_vitacare_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_vitacare_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VitaCare"
        tools:targetApi="31">
        <activity
            android:name=".PatientProfileActivity"
            android:exported="false" />
        <activity
            android:name=".MyAppointmentsActivity"
            android:exported="false" />
        <activity
            android:name=".TimeSlotSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".DoctorsScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".AvailableMajorsListActivity"
            android:exported="false" />
        <activity
            android:name=".LocationsActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseLocationActivity"
            android:exported="false" />
        <activity
            android:name=".ClinicListNewAppointment"
            android:exported="false" />
        <activity
            android:name=".DoctorsListActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClinicListActivity"
            android:exported="false" />
        <activity
            android:name=".AppStartActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".AppointmentBookingActivity"
            android:exported="false" />
    </application>

</manifest>